<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/itemContainer"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:padding="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:layout_gravity="center_vertical" 
        android:orientation="vertical" >
		<TextView
		    style="@style/trainItemORANGE"
		    android:id="@+id/itemTrainType"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"/>
		<TextView
		    style="@style/trainItemORANGE"
		    android:id="@+id/itemTrainNumber"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >
		<TextView
		    style="@style/trainItemBLACK"
		    android:id="@+id/itemDepStation"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
		<TextView
		    style="@style/trainItemBLACK"
		    android:id="@+id/itemDepTime"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"  />
	</LinearLayout>
	<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >
		<TextView
		    style="@style/trainItemBLACK"
		    android:id="@+id/itemArrStation"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
		<TextView
		    style="@style/trainItemBLACK"
		    android:id="@+id/itemArrTime"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
	</LinearLayout>
	<TextView
	    style="@style/trainItemBLACK"
	    android:id="@+id/itemStatus"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"	        
	    android:layout_weight="1.5" />
	<TextView
	    style="@style/trainItemORANGE"
	    android:id="@+id/itemDelayTime"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"	        
	    android:layout_weight="1" />
	
</LinearLayout>